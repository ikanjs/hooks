{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "baseUrl": "./",
    "noImplicitThis": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "nodenext"
  },
  "exclude": [
    "node_modules",
    "packages/**/__tests__/*"
  ],
  "include": [
    "packages/**/*"
  ]
}